                <!--DataGrid-->
                <StackPanel>
                    <DataGrid ItemsSource="{Binding Path=WaterIndicators}"
                            AutoGenerateColumns="False"
                            CanUserAddRows="False"
                            GridLinesVisibility="Vertical"
                            VerticalGridLinesBrush="DarkGray"
                            AlternatingRowBackground="LightGray"
                            EnableRowVirtualization="True"
                            IsReadOnly="True"
                            HorizontalAlignment="Center"
                              MaxWidth="700"
                              MinWidth="400"
                              Margin="0 0 0 20">
                        <DataGrid.Columns>
                            <DataGridTextColumn Header="Показатель" Binding="{Binding Name}" Width="*"/>
                            <DataGridTextColumn Header="мг/дм3" Binding="{Binding InitialUnit}" Width="*"/>
                            <DataGridTextColumn Header="Эквивалент" Binding="{Binding Eq}" Width="*"/>
                            <DataGridTextColumn Header="мг-экв/дм3" Binding="{Binding FinalUnit}" Width="*"/>
                        </DataGrid.Columns>
                    </DataGrid>
                </StackPanel>

                <!--Title TotalCationContent-->
                <StackPanel>
                    <TextBlock HorizontalAlignment="Center"
                                TextWrapping="Wrap" 
                                VerticalAlignment="Top"
                                TextAlignment="Center"
                                Text="Суммарное содержание катионов"/>
